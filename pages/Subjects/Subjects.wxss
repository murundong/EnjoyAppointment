.content{
  font-family: "Arial", "KaiTi", sans-serif;
  color: #525562;
}
.content-head{
  display: flex;
  justify-content: space-between;
  margin: 30rpx auto;
  padding-right: 30rpx;
  padding-left: 10rpx;
}
.content-title::before{
  content: '';
  height: 30rpx;
  border-left:10rpx solid #ff6f11;
  margin-right: 4rpx;
  border-radius: 6rpx;
}
.content-add{
  display: flex;
  justify-content: flex-end;
  align-items: center;
  border: 1px solid #b3b6bd;
  padding: 1rpx 25rpx;
  border-radius: 50rpx;
}
.add-icon{
  margin-right: 12rpx;
}
.tag-container{
  color: #b3b6bd;
  display: flex;
  justify-content: flex-end;
  font-size: 20rpx;
}
.tag-item{
  border: 1px solid #b3b6bd;
  padding: 2rpx 10rpx;
  border-radius: 20rpx;
}