  display: grid;
  height: 100%;
  color: white;
}
.uslide-right-edit{
  background-color: #ff6f11;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.user-content-nick{
  width: 100%;
    display: flex;
    justify-content: space-between;
}
