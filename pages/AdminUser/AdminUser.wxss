.arcpop-title::before{
  content: '';
  height: 30rpx;
  border-left: 10rpx solid #ff6f11;
  margin-right: 4rpx;
  border-radius: 6rpx;
}
.arcpop-title-name{
    font-style: italic;
}
.foot-btn {
  width: 70%;
  height: 80rpx;
  border-radius: 50rpx;
  margin: 50rpx auto;
  background: linear-gradient(to top right, rgba(253, 77, 77,1), rgba(255, 111, 17, 0.8));
  color: white;
  font-weight: bold;
  letter-spacing: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
}
.role-tag{
  margin-right: 20rpx;
}
.user-nick-line{
  display: flex;
  align-items: center;
}
.user-nick-line text{
  margin-left: 4rpx;
}
.l-radio-item{
  height: 80rpx;
  line-height: 80rpx;
}
