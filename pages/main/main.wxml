<swiper class="swipper" indicator-dots="true" autoplay="true" interval="3000">
  <block wx:for="{{Banners}}" >
    <swiper-item >
      <view class="{{item}}">{{item}}</view>
    </swiper-item>
  </block>
</swiper>

<view class="door">
  <block wx:for="{{Doors}}">
    <view class="{{item.img}}">
      <view class="door-status">{{item.status}}</view>
      <view class="door-title">{{item.txt}}</view>
      <view class="door-desc">{{item.desc}}</view>
    </view>
  </block>
</view>
