/* pages/SendUserCards/SendUserCards.wxss */
.foot-btn {
  width: 70%;
  height: 80rpx;
  border-radius: 50rpx;
  margin: 50rpx auto;
  background: linear-gradient(to top right, rgba(253, 77, 77,1), rgba(255, 111, 17, 0.8));
  color: white;
  font-weight: bold;
letter-spacing: 10rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  margin-bottom: 50rpx;
}
.content-prevcard{
  padding: 0 10rpx;
}
.content-title{
  padding-left: 10rpx;
}
.content-body{
  margin-top: 20rpx;
  padding-bottom: 50rpx;
}
.content-title::before{
  content: ' ';
  height: 30rpx;
  border-left:10rpx solid #ff6f11;
  margin-right: 4rpx;
  border-radius: 6rpx;
}
.input-right{
  display: flex;
  align-items: center;
}
.input-clear-line{
  display: flex;
}
.clear-date{
  padding: 0rpx 10rpx;
    border-radius: 50rpx;
    background-color: #b3b6bd;
    color: white;
    display: flex;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    margin-left: 10rpx;
}
.input-right text{
  margin-right: 10rpx;
}
.content-uinfo{
 position: relative; 
 width: 270rpx;
}
.content-uinfo image{
  width: 250rpx;
  height: 250rpx;
  padding: 20rpx;
}
.content-uinfo view{
  position: absolute;
  font-size: 28rpx;
  padding: 1rpx 10rpx;
  border-radius: 10rpx;
  background-color: rgba(82,85,98,0.6);
  min-width: 60rpx;
  color: white;
  top: 20rpx;
  right: 0rpx;
  text-align: center;
}
.freeze-lst{
  padding: 0 20rpx; 
}
.input-edclass{
  color: #ff6f11;
}