/* pages/EnsureAppointment/EnsureAppointment.wxss */
.content {
  color: #525562;
  font-family: "Arial", "KaiTi", sans-serif;
  position: relative;
}

.content-body {
  position: absolute;
  display: flex;
  flex-direction: column;
  padding: 120rpx 0 50rpx 0rpx;
  top: 0;
  width: 100%;
}

.class-head {
  width: 100%;
  height: 388rpx;
  -webkit-filter: blur(10rpx);
}

.content-head {
  display: flex;
  flex-direction: row;
  align-items: center;
  padding-left: 20rpx;
}

.content-head image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 75rpx;
}

.content-head text {
  margin-left: 30rpx;
  color: white;
  font-weight: bold;
  letter-spacing: 3rpx;
}

.class-title {
  font-size: 35rpx;
  margin-left: 37rpx;
  font-weight: bold;
}

.class-info {
  /* background-color: #f9f9f9; */
  background: linear-gradient(to top right, #fd4d4d, #ff6f11);
  width: 95%;
  height: 400rpx;
  padding-top: 20rpx;
  margin: 65rpx auto;
  border-radius: 20rpx;
  position: relative;
}

.class-info::before {
  content: "";
  border: 16px solid #FE5F2F;
  border-left-color: transparent;
  border-right-color: transparent;
  border-top-color: transparent;
  position: absolute;
  top: -63rpx;
  left: 40rpx;
}

.class-info-item:last-child {
  padding-bottom: 20rpx;
}

.class-info-item {
  display: flex;
  flex-direction: row;
}

.info-item-title {
  width: 100rpx;
  color: #f9f9f9;
  text-align: right;
  padding-right: 25rpx;
}

.info-item-content {
  font-size: 30rpx;
  color: white;
}


.class-detail {
  width: 88%;
  margin: -68rpx auto;
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  border: 1px solid #ece8e8;
  border-top: none;
  border-radius: 10rpx;
}

.detail-cancel,
.detail-tips {
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  position: relative;
}

.detail-tips {
  margin-top: 40rpx;
}

