.card-info {
  text-align: right;
}

.detail-card,.user-item {
  position: relative;
}

.card-info text {
  padding: 5rpx 10rpx;
  background-color: #ece8e8;
  border-radius: 4rpx;
  margin-left: 20rpx;
  display: inline-flex;
  margin-bottom: 10rpx;
}
.user-item{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.user-item:first-child{
  margin-top: 20rpx;
}
.user-item image{
  width: 60rpx;
  height: 60rpx;
  border-radius: 30rpx;
  margin-right: 10rpx;
}
.user-item-left{
  display: flex;
  align-items: center;
}
.ensure{
  display: flex;
  flex-direction: row;
  justify-content: space-around;
}
.ensure-card{
  display: inline-flex;
  border: 1px solid red;
}
.class-btn {
  width: 300rpx;
  height: 80rpx;
  border-radius: 50rpx;
  margin-top: 30rpx;
  margin-right: 30rpx;
  color: #fd4d4d;
  background-color: white;
  letter-spacing: 2rpx;
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  float: right;
  font-weight: bold;
}