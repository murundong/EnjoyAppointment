<wxs module="CalCompute">
  var IsCurrentday=function(item,current){
    var res=
    item.day==current.day && 
    item.month==current.month &&
    item.year==current.year;
    return res;
  }
  module.exports.IsCurrentDay= IsCurrentday;
</wxs>

<view>
  <scroll-view class="calender"scroll-X="true"  >
    <block wx:for="{{daylist}}" wx:key="index">
      <view class="calender-item" bindtap="onTap" data-calender-item="{{item}}">
        <text>{{item.week}}</text>
        <text class="{{CalCompute.IsCurrentDay(item,currentday)?'current':''}}" wx:if="{{CalCompute.IsCurrentDay(item,currentday)}}">{{(item.month+'-'+item.day+'ä»Š')}}</text>
        <text wx:else>{{item.day}}</text>
      </view>
    </block>
  </scroll-view>
</view>