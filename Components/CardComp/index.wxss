/* Components/CardComp/index.wxss */
.card-content{
  font-family: Tahoma,Helvetica,Arial,’宋体’,sans-serif;
  color: #525562;
  border:1px solid #eaeaea;
  width: 90%;
  margin: 0 auto;
  padding:10rpx 20rpx;
  border-radius: 20rpx;
  /* box-shadow: 2rpx 10rpx 4rpx -6rpx #ebeef3; */
  box-shadow: -2rpx 10rpx 30rpx -22rpx #0b0c0c;
  margin-top: 10rpx;
}
.card-title{
  display: flex;
  flex-direction: column;
}
.card-body{
  display: flex;
  flex-direction: row;
  margin-top: 10rpx;
  border: 1px solid #cccccc;
  border-radius: 10rpx;
  background: linear-gradient(to top right, rgb(31, 30, 30), rgba(70, 70, 70, 0.8));
  color: white;
  position: relative;
  padding-bottom: 35rpx;
  overflow: hidden;
}
.card-body-left{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
}
.body-left-img{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  margin-top: 20rpx;
}
.card-body-right{
  display: flex;
  flex-direction: column;
  margin-left: 30rpx;
  padding: 30rpx 20rpx 20rpx;
  font-size: 30rpx;
}
.body-right-tips{
  position: absolute;
  right: 0;
  bottom: 0;
  font-size: 26rpx;
  background-color:#3f4548;
  text-align: right;
  padding: 5rpx 20rpx;
  border-radius: 4rpx;
}
.body-subscript{
  position: absolute;
  font-size: 20rpx;
  background: linear-gradient(to top right, rgba(253, 77, 77,1), rgba(255, 111, 17, 0.8));
  color: white;
  padding: 4rpx 10rpx;
  width: 120rpx;
  text-align: center;
  right: -36rpx;
  top: 17rpx;
  transform: rotate(45deg);
}
.body-expired::before{
  content: '';
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  border: 1px solid #b3b6bd;
  position: absolute;
  letter-spacing: 2rpx;
}
.body-expired{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  color: #b3b6bd;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: rotate(45deg);
  border: 1px dashed #b3b6bd;
  position: absolute;
  right: 30rpx;
  top: 50rpx;
}

.body-freeze::before{
  content: '';
  width: 140rpx;
  height: 140rpx;
  border-radius: 70rpx;
  border: 1px solid #fd4d4d;
  position: absolute;
  letter-spacing: 2rpx;
}
.body-freeze{
  width: 120rpx;
  height: 120rpx;
  border-radius: 60rpx;
  color: #fd4d4d;
  display: flex;
  align-items: center;
  justify-content: center;
  transform: rotate(45deg);
  border: 1px dashed #fd4d4d;
  position: absolute;
  right: 30rpx;
  top: 50rpx;
}

.body-right{
  display: flex;
  flex-direction: column;
}
.body-right-l,.body-right-lf{
  font-size: 24rpx;
  margin-right: 10rpx;
  display: inline-block;
  width: 120rpx;
}
.body-right-lf{
  letter-spacing: 3rpx;
}
.body-right-r{
  font-size: 30rpx;
}
.body-bottom-tips{
  font-size: 25rpx;
  color: red;
}
.tips-time{
  margin-left: 20rpx;
}
